{
	"name": "eightshift/eightshift-forms",
	"description": "Eightshift Forms plugin for building developer-friendly Gutenberg-ready forms in WordPress",
	"keywords": [
		"composer",
		"form",
		"forms",
		"email",
		"Mailchimp",
		"plugin",
		"blocks",
		"Gutenberg",
		"WordPress"
	],
	"homepage": "https://eightshift.com/",
	"license": "MIT",
	"authors": [
		{
			"name": "Eightshift team",
			"email": "team@eightshift.com",
			"homepage": "https://eightshift.com/",
			"role": "Developer / IT Manager"
		}
	],
	"support": {
		"issues": "https://github.com/infinum/eightshift-forms/issues",
		"source": "https://github.com/infinum/eightshift-forms"
	},
	"require-dev": {
		"brain/faker": "dev-master",
		"brain/monkey": "^2.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"infinum/eightshift-coding-standards": "^1.5",
		"pestphp/pest": "^1.2",
		"php-stubs/wordpress-stubs": "^5.9",
		"phpunit/phpunit": "^9.5",
		"szepeviktor/phpstan-wordpress": "^1.0.3",
		"wp-cli/wp-cli": "^2.6"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/infinum/eightshift-libs.git"
		}
	],
	"require": {
		"php": "^7.4 || <8.0",
		"infinum/eightshift-libs": "^6.2.0",
		"typisttech/imposter-plugin": "^0.6.2"
	},
	"suggest": {
		"ext-pcov": "* || This extension is used for code coverage generation. Use either pcov, or xdebug, but not both.",
		"ext-xdebug": "^3.0.0 || This extension is used for code coverage generation. Use either pcov, or xdebug, but not both."
	},
	"autoload": {
		"psr-4": {
			"EightshiftForms\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true,
		"process-timeout": 2000,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"typisttech/imposter-plugin": true,
			"pestphp/pest-plugin": true
		}
	},
	"scripts": {
		"analyze": "@php ./vendor/bin/phpstan analyze",
		"standards:check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"standards:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"test:unit": "@php ./vendor/bin/pest",
		"test:coverage": "@php ./vendor/bin/pest --coverage"
	},
	"extra": {
		"imposter": {
			"namespace": "EightshiftFormsVendor"
		}
	}
}
