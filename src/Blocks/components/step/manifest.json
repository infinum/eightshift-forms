{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "step",
	"title": "Step",
	"componentClass": "es-step",
	"components": {
		"progressBar": "progressBar"
	},
	"attributes": {
		"stepName": {
			"type": "string"
		},
		"stepLabel": {
			"type": "string",
			"default": "Step - ???"
		},
		"stepContent": {
			"type": "string"
		},
		"stepIsActive": {
			"type": "boolean",
			"default": false
		},
		"stepSubmit": {
			"type": "string"
		},
		"stepMultiflowPostId": {
			"type": "string"
		},
		"stepPrevLabel": {
			"type": "string"
		},
		"stepNextLabel": {
			"type": "string"
		},
		"stepMultiflowUse": {
			"type": "boolean",
			"default": false
		},
		"stepMultiflowRules": {
			"type": "array"
		}
	}
}
