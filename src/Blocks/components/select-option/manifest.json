{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "select-option",
	"title": "Select Option",
	"componentClass": "es-select-option",
	"example": {
		"attributes": {
			"selectOptionLabel": "Label",
			"selectOptionValue": "Value",
			"selectOptionIsSelected": false,
			"selectOptionIsDisabled": false
		}
	},
	"components": {
		"conditionalTags": "conditionalTags"
	},
	"attributes": {
		"selectOptionLabel": {
			"type": "string"
		},
		"selectOptionValue": {
			"type": "string"
		},
		"selectOptionAsPlaceholder": {
			"type": "boolean",
			"default": false
		},
		"selectOptionIsSelected": {
			"type": "boolean",
			"default": false
		},
		"selectOptionIsDisabled": {
			"type": "boolean",
			"default": false
		},
		"selectOptionIsHidden": {
			"type": "boolean",
			"default": false
		},
		"selectOptionDisabledOptions": {
			"type": "array"
		},
		"selectOptionAttrs": {
			"type": "object"
		}
	}
}
