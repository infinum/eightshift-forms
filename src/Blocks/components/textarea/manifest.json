{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "textarea",
	"title": "Textarea",
	"componentClass": "es-textarea",
	"componentJsSingleSubmitClass": "js-es-block-single-submit",
	"example": {
		"attributes": {
			"textareaName": "Name",
			"textareaValue": "Value",
			"textareaPlaceholder": "Placeholder",
			"textareaIsDisabled": false,
			"textareaIsReadOnly": false,
			"textareaIsRequired": false
		}
	},
	"components": {
		"field": "field",
		"conditionalTags": "conditionalTags"
	},
	"attributes": {
		"textareaName": {
			"type": "string"
		},
		"textareaValue": {
			"type": "string"
		},
		"textareaPlaceholder": {
			"type": "string"
		},
		"textareaIsDisabled": {
			"type": "boolean",
			"default": false
		},
		"textareaIsReadOnly": {
			"type": "boolean",
			"default": false
		},
		"textareaIsRequired": {
			"type": "boolean",
			"default": false
		},
		"textareaMinLength": {
			"type": "integer"
		},
		"textareaMaxLength": {
			"type": "integer"
		},
		"textareaIsMonospace": {
			"type": "boolean",
			"default": false
		},
		"textareaSaveAsJson": {
			"type": "boolean",
			"default": false
		},
		"textareaTracking": {
			"type": "string"
		},
		"textareaValidationPattern": {
			"type": "string"
		},
		"textareaMeta": {
			"type": "string"
		},
		"textareaAttrs": {
			"type": "object"
		},
		"textareaDisabledOptions": {
			"type": "array"
		},
		"textareaSingleSubmit": {
			"type": "boolean",
			"default": false
		}
	},
	"options": {
		"textareaMinLength": {
			"min":  0,
			"step": 1
		},
		"textareaMaxLength": {
			"min":  1,
			"step": 1
		}
	}
}
