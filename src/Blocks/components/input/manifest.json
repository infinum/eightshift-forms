{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "input",
	"title": "Input",
	"componentClass": "es-input",
	"example": {
		"attributes": {
			"inputName": "Name",
			"inputValue": "Value",
			"inputPlaceholder": "Placeholder",
			"inputType": "text",
			"inputIsDisabled": false,
			"inputIsReadOnly": false,
			"inputIsRequired": false
		}
	},
	"components": {
		"field": "field",
		"conditionalTags": "conditionalTags"
	},
	"attributes": {
		"inputName": {
			"type": "string"
		},
		"inputValue": {
			"type": "string"
		},
		"inputPlaceholder": {
			"type": "string"
		},
		"inputType": {
			"type": "string",
			"default": "text"
		},
		"inputIsDisabled": {
			"type": "boolean",
			"default": false
		},
		"inputIsReadOnly": {
			"type": "boolean",
			"default": false
		},
		"inputIsRequired": {
			"type": "boolean",
			"default": false
		},
		"inputTracking": {
			"type": "string"
		},
		"inputIsEmail": {
			"type": "boolean",
			"default": false
		},
		"inputIsUrl": {
			"type": "boolean",
			"default": false
		},
		"inputIsNumber": {
			"type": "boolean",
			"default": false
		},
		"inputValidationPattern": {
			"type": "string"
		},
		"inputMinLength": {
			"type": "integer"
		},
		"inputMaxLength": {
			"type": "integer"
		},
		"inputMin": {
			"type": "integer"
		},
		"inputMax": {
			"type": "integer"
		},
		"inputStep": {
			"type": "integer"
		},
		"inputMeta": {
			"type": "string"
		},
		"inputAttrs": {
			"type": "object"
		},
		"inputDisabledOptions": {
			"type": "array"
		}
	},
	"options": {
		"inputType": [
			{
				"label": "Plain text",
				"value": "text"
			},
			{
				"label": "E-mail",
				"value": "email"
			},
			{
				"label": "Url",
				"value": "url"
			},
			{
				"label": "Number",
				"value": "number"
			}
		],
		"inputMinLength": {
			"min":  0,
			"step": 1
		},
		"inputMaxLength": {
			"min":  1,
			"step": 1
		},
		"inputMin": {
			"min":  0,
			"step": 1
		},
		"inputMax": {
			"min":  1,
			"step": 1
		},
		"inputStep": {
			"min":  1,
			"step": 1
		}
	}
}
