{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "card",
	"title": "Card",
	"componentClass": "es-card",
	"components": {
		"checkbox": "checkbox"
	},
	"attributes": {
		"cardId": {
			"type": "string"
		},
		"cardTitle": {
			"type": "string"
		},
		"cardSubTitle": {
			"type": "string"
		},
		"cardIcon": {
			"type": "string"
		},
		"cardLinks": {
			"type": "array"
		},
		"cardContent": {
			"type": "string"
		},
		"cardPadded": {
			"type": "boolean",
			"default": false
		},
		"cardBulk": {
			"type": "boolean",
			"default": false
		},
		"cardIndented": {
			"type": "boolean",
			"default": false
		},
		"cardVertical": {
			"type": "boolean",
			"default": false
		},
		"cardListItem": {
			"type": "boolean",
			"default": false
		},
		"cardShowLinksOnHover": {
			"type": "boolean",
			"default": false
		},
		"cardShowButtonsOnHover": {
			"type": "boolean",
			"default": false
		},
		"cardTrailingButtons": {
			"type": "array"
		}
	}
}
