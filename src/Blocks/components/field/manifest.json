{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "field",
	"title": "Field",
	"componentClass": "es-field",
	"componentJsClass": "js-es-block-field",
	"example": {
		"attributes": {
			"fieldContent": "Content",
			"fieldId": "Id",
			"fieldLabel": "Label",
			"fieldName": "Name"
		}
	},
	"components": {
		"error": "error",
		"tooltip": "tooltip"
	},
	"attributes": {
		"fieldType": {
			"type": "string",
			"default": "div"
		},
		"fieldContent": {
			"type": "string"
		},
		"fieldBeforeContent": {
			"type": "string"
		},
		"fieldAfterContent": {
			"type": "string"
		},
		"fieldName": {
			"type": "string"
		},
		"fieldUniqueId": {
			"type": "string"
		},
		"fieldId": {
			"type": "string"
		},
		"fieldLabel": {
			"type": "string",
			"default": "Label"
		},
		"fieldUse": {
			"type": "boolean",
			"default": true
		},
		"fieldHideLabel": {
			"type": "boolean",
			"default": false
		},
		"fieldHidden": {
			"type": "boolean",
			"default": false
		},
		"fieldHelp": {
			"type": "string"
		},
		"fieldUseError": {
			"type": "boolean",
			"default": true
		},
		"fieldUseTooltip": {
			"type": "boolean",
			"default": false
		},
		"fieldWidthLarge": {
			"type": "integer"
		},
		"fieldWidthDesktop": {
			"type": "integer"
		},
		"fieldWidthTablet": {
			"type": "integer",
			"default": 12
		},
		"fieldWidthMobile": {
			"type": "integer"
		},
		"fieldDisabled": {
			"type": "boolean",
			"default": false
		},
		"fieldIsRequired": {
			"type": "boolean",
			"default": false
		},
		"fieldStyle": {
			"type": "string"
		},
		"fieldAttrs": {
			"type": "object"
		},
		"fieldSkip": {
			"type": "boolean",
			"default": false
		},
		"fieldConditionalTags": {
			"type": "string"
		},
		"fieldDisabledOptions": {
			"type": "array"
		},
		"fieldNoInnerSpace": {
			"type": "boolean",
			"default": false
		},
		"fieldInlineBeforeAfterContent": {
			"type": "boolean",
			"default": false
		},
		"fieldIsFiftyFiftyHorizontal": {
			"type": "boolean",
			"default": false
		}
	},
	"responsiveAttributes": {
		"fieldWidth": {
			"large": "fieldWidthLarge",
			"desktop": "fieldWidthDesktop",
			"tablet": "fieldWidthTablet",
			"mobile": "fieldWidthMobile"
		}
	},
	"variables": {
		"fieldWidth": [
			{
				"inverse": true,
				"variable": {
					"es-field-width": "calc((%value% / 12) * 100%)"
				}
			}
		],
		"fieldNoInnerSpace": {
			"true": [
				{
					"inverse": true,
					"variable": {
						"esf-field-space": "0"
					}
				}
			]
		}
	},
	"options": {
		"fieldWidth": {
			"min":  1,
			"max":  12,
			"step": 1
		}
	}
}
