{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "select",
	"title": "Select",
	"componentClass": "es-select",
	"example": {
		"attributes": {
			"selectContent": "",
			"selectName": "Name",
			"selectIsDisabled": false,
			"selectIsRequired": false
		}
	},
	"components": {
		"field": "field",
		"conditionalTags": "conditionalTags"
	},
	"attributes": {
		"selectContent": {
			"type": "string"
		},
		"selectPlaceholder": {
			"type": "string"
		},
		"selectUseLabelAsPlaceholder": {
			"type": "boolean",
			"default": false
		},
		"selectName": {
			"type": "string"
		},
		"selectIsDisabled": {
			"type": "boolean",
			"default": false
		},
		"selectIsRequired": {
			"type": "boolean",
			"default": false
		},
		"selectTracking": {
			"type": "string"
		},
		"selectSingleSubmit": {
			"type": "boolean",
			"default": false
		},
		"selectIsMultiple": {
			"type": "boolean",
			"default": false
		},
		"selectMinCount": {
			"type": "integer"
		},
		"selectMaxCount": {
			"type": "integer"
		},
		"selectMeta": {
			"type": "string"
		},
		"selectAttrs": {
			"type": "object"
		},
		"selectFieldAttrs": {
			"type": "object"
		},
		"selectDisabledOptions": {
			"type": "array"
		},
		"selectUseSearch": {
			"type": "boolean",
			"default": true
		},
		"selectTypeCustom": {
			"type": "string"
		},
		"selectShowAs": {
			"type": "string"
		}
	},
	"options": {
		"selectMinCount": {
			"min":  0,
			"step": 1
		},
		"selectMaxCount": {
			"min":  1,
			"step": 1
		}
	}
}
