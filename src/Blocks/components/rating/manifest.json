{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "rating",
	"title": "Rating",
	"componentClass": "es-rating",
	"example": {
		"attributes": {
			"ratingName": "Name",
			"ratingValue": "Value",
			"ratingIsDisabled": false,
			"ratingIsReadOnly": false,
			"ratingIsRequired": false
		}
	},
	"components": {
		"field": "field",
		"conditionalTags": "conditionalTags"
	},
	"attributes": {
		"ratingName": {
			"type": "string"
		},
		"ratingAmount": {
			"type": "string",
			"default": "5"
		},
		"ratingValue": {
			"type": "string"
		},
		"ratingTypeCustom": {
			"type": "string"
		},
		"ratingIsDisabled": {
			"type": "boolean",
			"default": false
		},
		"ratingUseLabelAsPlaceholder": {
			"type": "boolean",
			"default": false
		},
		"ratingIsReadOnly": {
			"type": "boolean",
			"default": false
		},
		"ratingIsRequired": {
			"type": "boolean",
			"default": false
		},
		"ratingTracking": {
			"type": "string"
		},
		"ratingMeta": {
			"type": "string"
		},
		"ratingAttrs": {
			"type": "object"
		},
		"ratingFieldAttrs": {
			"type": "object"
		},
		"ratingDisabledOptions": {
			"type": "array"
		}
	},
	"options": {
		"ratingType": [
			{
				"label": "Plain text",
				"value": "text"
			},
			{
				"label": "E-mail",
				"value": "email"
			},
			{
				"label": "URL",
				"value": "url"
			},
			{
				"label": "Number",
				"value": "number"
			}
		],
		"ratingMinLength": {
			"min":  0,
			"step": 1
		},
		"ratingMaxLength": {
			"min":  1,
			"step": 1
		},
		"ratingMin": {
			"min":  0,
			"step": 1
		},
		"ratingMax": {
			"min":  1,
			"step": 1
		},
		"ratingStep": {
			"min":  1,
			"step": 1
		}
	}
}
