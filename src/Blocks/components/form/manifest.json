{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "form",
	"title": "form",
	"componentClass": "es-form",
	"components": {
		"loader": "loader",
		"field": "field",
		"globalMsg": "globalMsg",
		"progressBar": "progressBar"
	},
	"example": {
		"attributes": {
			"formContent": "Content",
			"formName": "Name",
			"formAction": "Action",
			"formMethod": "Method",
			"formId": "Id"
		}
	},
	"attributes": {
		"formContent": {
			"type": "string"
		},
		"formName": {
			"type": "string"
		},
		"formAction": {
			"type": "string"
		},
		"formActionExternal": {
			"type": "boolean",
			"default": false
		},
		"formHasSteps": {
			"type": "boolean",
			"default": false
		},
		"formMethod": {
			"type": "string",
			"default": "post"
		},
		"formId": {
			"type": "string"
		},
		"formParentSettings": {
			"type": "object"
		},
		"formPhoneSync": {
			"type": "boolean",
			"default": false
		},
		"formPhoneDisablePicker": {
			"type": "boolean",
			"default": false
		},
		"formMeta": {
			"type": "string"
		},
		"formAttrs": {
			"type": "object"
		},
		"formServerSideRender": {
			"type": "boolean",
			"default": false
		},
		"formUseSingleSubmit": {
			"type": "boolean",
			"default": false
		},
		"formDownloads": {
			"type": "array",
			"items": {
				"type": "object"
			},
			"default": []
		}
	},
	"options": {
		"formMethod": [
			{
				"label": "Get",
				"value": "get"
			},
			{
				"label": "Post",
				"value": "post"
			}
		]
	}
}
