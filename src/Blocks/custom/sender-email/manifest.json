{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/block.json",
	"blockName": "sender-email",
	"title": "Sender Email",
	"description" : "A field for inputting e-mail addresses that will be the target for sending confirmation e-mails",
	"category": "eightshift-forms",
	"icon": {
		"src": "esf-sender-email"
	},
	"keywords": [
		"sender",
		"email"
	],
	"components": {
		"input": "input"
	},
	"parent": [
		"eightshift-forms/form"
	],
	"example": {
		"attributes": {
			"inputName": "sender-email",
			"inputIsRequired": true,
			"inputIsEmail": true,
			"inputType": "email"
		}
	},
	"attributes": {
		"inputName": {
			"type": "string",
			"default": "sender-email"
		},
		"inputType": {
			"type": "string",
			"default": "email"
		},
		"inputIsRequired": {
			"type": "boolean",
			"default": true
		},
		"inputIsEmail": {
			"type": "boolean",
			"default": true
		}
	}
}
