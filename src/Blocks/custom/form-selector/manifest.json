{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/block.json",
	"blockName": "form-selector",
	"title": "Form selector",
	"description" : "Allows selecting the form that should be displayed",
	"category": "eightshift-forms",
	"icon": {
		"src": "esf-form-picker"
	},
	"keywords": [
		"forms"
	],
	"hasInnerBlocks": true,
	"attributes": {
		"formSelectorAllowedBlocks": {
			"type": "array",
			"default": [
				"eightshift-forms/form",
				"eightshift-forms/mailchimp",
				"eightshift-forms/greenhouse",
				"eightshift-forms/hubspot",
				"eightshift-forms/mailerlite",
				"eightshift-forms/goodbits",
				"eightshift-forms/active-campaign",
				"eightshift-forms/airtable",
				"eightshift-forms/moments"
			]
		}
	},
	"forms": [
		{
			"label": "Simple contact",
			"slug": "mailer",
			"blockName": "eightshift-forms/mailer",
			"innerBlocks": [
				[
					"eightshift-forms/sender-email",
					{
						"senderEmailInputFieldLabel": "E-mail"
					}
				],
				[
					"eightshift-forms/input",
					{
						"inputInputFieldLabel": "Name"
					}
				],
				[
					"eightshift-forms/input",
					{
						"inputInputFieldLabel": "Subject"
					}
				],
				[
					"eightshift-forms/textarea",
					{
						"textareaTextareaFieldLabel": "Message"
					}
				],
				[
					"eightshift-forms/submit"
				]
			]
		},
		{
			"label": "Mailchimp",
			"slug": "mailchimp",
			"blockName": "eightshift-forms/mailchimp"
		},
		{
			"label": "Greenhouse",
			"slug": "greenhouse",
			"blockName": "eightshift-forms/greenhouse"
		},
		{
			"label": "HubSpot",
			"slug": "hubspot",
			"blockName": "eightshift-forms/hubspot"
		},
		{
			"label": "MailerLite",
			"slug": "mailerlite",
			"blockName": "eightshift-forms/mailerlite"
		},
		{
			"label": "Goodbits",
			"slug": "goodbits",
			"blockName": "eightshift-forms/goodbits"
		},
		{
			"label": "ActiveCampaign",
			"slug": "active-campaign",
			"blockName": "eightshift-forms/active-campaign"
		},
		{
			"label": "Airtable",
			"slug": "airtable",
			"blockName": "eightshift-forms/airtable"
		},
		{
			"label": "Moments",
			"slug": "moments",
			"blockName": "eightshift-forms/moments"
		}
	]
}
