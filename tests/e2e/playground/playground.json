{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/post-new.php",
	"login": true,
	"features": {
		"networking": false
	},
	"steps": [
		{
			"step": "resetData"
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/mu-plugins/mu-plugins.php",
			"data": "<?php remove_filter('the_content', 'wpautop'); ?>"
		},
		{
			"step": "runPHP",
			"code": "<?php require_once '/wordpress/wp-load.php'; activate_plugin('eightshift-forms/eightshift-forms.php'); ?>"
		},
		{
			"step": "login",
			"username": "admin",
			"password": "password"
		},
		{
			"step": "importWxr",
			"file": {
				"resource": "url",
				"url": "https://github.com/infinum/eightshift-forms/blob/feature/tests/tests/e2e/playground/dataset.xml"
			}
		},
		{
			"step": "setSiteOptions",
			"options": {
				"es-forms-calculator-use": "calculator-use"
			}
		}
	],
	"preferredVersions": {
		"php": "8.4",
		"wp": "6.8.3"
	},
	"constants": {
		"COMPRESS_CSS": true,
		"COMPRESS_SCRIPTS": true,
		"CONCATENATE_SCRIPTS": true,
		"ENFORCE_GZIP": true,
		"SCRIPT_DEBUG": false,
		"WP_MEMORY_LIMIT": "256M",
		"WP_ENVIRONMENT_TYPE": "production"
	}
}
